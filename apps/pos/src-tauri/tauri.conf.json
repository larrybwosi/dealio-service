{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Dealio",
  "version": "1.8.2",
  "identifier": "com.dealio.apps",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "Dealio ERP",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["com.dealio.apps", "my-tauri-app"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE1MERGMDRDMUU5NjRGMzYKUldRMlQ1WWVUUEFORlpISTJJOXk0aGVhdEEvQUZWUU1RM3pYcW9vL0N1dkM2dit6UlpWOS9WaVkK",
      "endpoints": [
        "https://github.com/larrybwosi/dealio-descktop/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
